<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Code</th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>
  <tbody>
    {{#each stations}}
    <tr>
      <td>
          <h3 class="title">
            <a href="/station/{{_id}}">
              {{title}}
            </a>
        </h3>
      </td>
      <td>
        {{latitude}}
      </td>
      <td>
        {{longitude}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
